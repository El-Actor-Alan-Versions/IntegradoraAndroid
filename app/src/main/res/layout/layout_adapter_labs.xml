<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="#F3F4F6">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sección de ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/l_labs_id"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/txtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID aquí"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <!-- Sección de Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/l_labs_nom"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/txtNomL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre aquí"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <!-- Sección de Docencia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/l_labs_docencia"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/txtDocL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Docencia aquí"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <!-- Sección de Estatus -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/l_labs_estatus"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/txtEstaL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estatus aquí"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
